<div class="px-6 pt-6">
  <div class="flex justify-between">
    <h1 class="text-2xl">Clients</h1>
    <a href="/clients/create" class="text-blue-500 hover:text-blue-700">Create Client</a>
  </div>

  <table class="min-w-full bg-white border border-gray-200 mt-6">
    <thead>
      <tr>
        <th class="py-2 px-4 text-left border-b">Name</th>
        <th class="py-2 px-4 text-left border-b">Email</th>
        <th class="py-2 px-4 text-left border-b">Phone</th>
        <th class="py-2 px-4 text-left border-b">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% clients.forEach(client => { %>
        <tr>
          <td class="py-2 px-4 border-b"><%= client.name %></td>
          <td class="py-2 px-4 border-b"><%= client.email %></td>
          <td class="py-2 px-4 border-b"><%= client.phone %></td>
          <td class="py-2 px-4 border-b">
            <a href="/clients/edit/<%= client._id %>" class="text-blue-500 hover:text-blue-700">Edit</a>
            <a href="/clients/delete/<%= client._id %>" class="text-red-500 hover:text-red-700 ml-2">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>